{
  "name": "@composite-ui/core",
  "version": "1.0.1",
  "description": "React component library (still under development)",
  "author": "ebadgio <eli.badgio@gmail.com>",
  "homepage": "https://github.com/ebadgio/composite-ui#readme",
  "license": "ISC",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "esnext": "lib/esnext/index.js",
  "scripts": {
    "clean": "rm -rf lib/*",
    "build": "run-p \"build:*\"",
    "build:esm": "tsc -p ./src",
    "build:cjs": "tsc -p ./src -m commonjs --outDir lib/cjs",
    "build:esnext": "tsc -p ./src -t esnext --outDir lib/esnext",
    "dev": "tsc -w -p ./src",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "tslib": "^1.10.0"
  },
  "peerDependencies": {
    "@emotion/core": "10.x",
    "@emotion/styled": "10.x",
    "react": "^16.x",
    "react-dom": "^16.x"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@styled-system/should-forward-prop": "^5.1.4",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.25",
    "@types/react": "^16.9.17",
    "@types/styled-system": "^5.1.3",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-system": "^5.1.2",
    "typescript": "^3.7.2"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebadgio/composite-ui.git"
  },
  "bugs": {
    "url": "https://github.com/ebadgio/composite-ui/issues"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./enzyme.config.js",
      "./jestSetUp.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "modulePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/lib/",
      "/es/"
    ],
    "testRegex": "\\.(test)\\.(ts|tsx|js)$",
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "d13b8bf95b6144f6e2f27727009f00f35fbb2b7d"
}
