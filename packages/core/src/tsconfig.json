{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "outDir": "../lib/esm",
    "declaration": true,
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es5", "es2015.iterable"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": false,
    "module": "es2015",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/*.test.tsx"]
}
